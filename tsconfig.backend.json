{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "incremental": false,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}