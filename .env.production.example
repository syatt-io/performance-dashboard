# Production Environment Variables for DigitalOcean

# Database Configuration (DigitalOcean Managed PostgreSQL)
DATABASE_URL="postgresql://username:password@db-postgresql-nyc1-12345-do-user-123456-0.b.db.ondigitalocean.com:25060/defaultdb?sslmode=require"

# Redis Configuration (DigitalOcean Managed Redis or self-hosted)
REDIS_URL="redis://default:password@db-redis-nyc1-12345-do-user-123456-0.b.db.ondigitalocean.com:25061"

# Application Configuration
NODE_ENV="production"
PORT="3000"
API_PORT="3000"
FRONTEND_PORT="3001"

# CORS Configuration (your domain)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here-replace-this"
SESSION_SECRET="your-session-secret-replace-this-long-random-string"

# Performance Testing APIs
PAGESPEED_API_KEY="your-pagespeed-insights-api-key"
WEBPAGETEST_API_KEY="your-webpagetest-api-key"

# Google Cloud Service Account (for Lighthouse)
GOOGLE_APPLICATION_CREDENTIALS="/app/config/service-account.json"

# Monitoring & Logging
LOG_LEVEL="info"
LOG_FILE="/var/log/performance-dashboard/app.log"

# Email Configuration (for alerts)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
ALERT_EMAIL_FROM="alerts@yourdomain.com"
ALERT_EMAIL_TO="admin@yourdomain.com"

# Optional: DigitalOcean Spaces (for storing reports)
DO_SPACES_ENDPOINT="https://nyc3.digitaloceanspaces.com"
DO_SPACES_BUCKET="your-bucket-name"
DO_SPACES_ACCESS_KEY="your-spaces-access-key"
DO_SPACES_SECRET_KEY="your-spaces-secret-key"

# Health Check
HEALTH_CHECK_PATH="/health"