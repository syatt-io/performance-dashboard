# Database
DATABASE_URL=postgresql://user:password@localhost:5432/performance_dashboard
REDIS_URL=redis://localhost:6379

# Server
PORT=3000
NODE_ENV=development

# Security
ENCRYPTION_KEY=your-strong-encryption-key-change-in-production
ALLOWED_ORIGINS=https://yourdomain.com,https://your-dashboard.com

# Google Cloud / PageSpeed API
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json
PAGESPEED_API_KEY=your_pagespeed_api_key

# WebPageTest API
WEBPAGETEST_API_KEY=your_webpagetest_api_key

# Shopify (per client - these would be managed securely in production)
# SHOPIFY_API_KEY=your_api_key
# SHOPIFY_API_SECRET=your_api_secret
# SHOPIFY_ACCESS_TOKEN=your_access_token

# Monitoring
LIGHTHOUSE_INTERVAL_HOURS=6
MONITORING_ENABLED=true
MONITORING_HOUR=2